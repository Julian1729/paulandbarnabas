extends ProtoBase.pug

block content

  .container-fluid
    nav.navbar.navbar-expand-md.navbar-light.bg-light
      a.navbar-brand(href='#') #{constants.site_name}
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='#')
              | Dashboard 
              span.sr-only (current)
          li.nav-item
            a.nav-link.disabled(href='#', tabindex='-1', aria-disabled='true') My Account
  
  .container-fluid
    .row.mt-md-2
      each val in fragments.length ? fragments : ['No assigned fragments'] 
        .col-sm
          .card
            .card-header 
              h5 Fragment ##{val.number}
              p.card-text.text-muted 
                small assigned on #{moment(val.assigned_on).format('MMMM D, YYYY')}
                br
                if val.last_worked
                  small last worked on #{val.last_worked}
                else
                  small never worked
              a.btn.btn-primary(href='#') view
            ul.list-group.list-group-flush
              li.list-group-item #{val.block_count} blocks
              li.list-group-item #{val.unit_count} units   


  
  
