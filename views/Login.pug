extends Base.pug

block content
  .content.login-page
    .inner
      .logo-and-title
        img(src=constants.base_url + "/assets/images/logos/logo_132x110.png", title="Paul and Barnabas, Territory organization platform for Jehovah's Witnesses")
        h1= constants.site_name
      
      form(action="/", method="POST")#login-form
        .text-input-container
          input(type="text", name="email", autocomplete="off", autocorrect="off", autocapitalize="off", spellcheck="false")
          .border
          label email
        .text-input-container
          input(type="password", name="password", autocomplete="off", autocorrect="off", autocapitalize="off", spellcheck="false")
          .border
          label password
        .button-row
          button Forgot Password 
          button.prominent.primary Login
        .button-row
          button.prominent.secondary Create an Account
