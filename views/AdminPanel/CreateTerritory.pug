extends AdminBase.pug

prepend GLOBAL_PUG
  - var page_name = "ap-createterritory"

append scripts
  script(src=constants.base_url + "/assets/js/dist/ap-createterritory.bundle.js", type="text/javascript")

block templates
  //- subunit text input template
  +text_input('subunit title')(class="dark subunit")
  
  .unit(data-number="")
    .info-row
      img.remove(src=constants.base_url + "/assets/images/delete.png", alt="Delete unit", title="Delete unit")
      span.number
      img.add(src=constants.base_url + "/assets/images/add.png", alt="Add subunit", title="Add subunit")
    .subunit-container

block panel
  form#create-territory-form
    
    //- Street select pane
    .pane#streetselect
      +section_header('select street')
      .select
        select
          option streetone
          option streettwo
          option streetthree
        span or create street
      .newstreet
        +text_input('street name')(name="new_street_name", class="dark")
    
    //- Create block pane
    .pane.createblock#createblock
      +section_header('create block')
      div
        +text_input('block hundred')(name="block_hundred", type="number", class="dark")
      div
        label odd
        input(type="radio", value="odd", name="odd_even")
      div
        label even
        input(type="radio", value="even", name="odd_even")
      div
        label generate houses from 
        //- input(type="number", name="generate_from", id="generate-from")
        +text_input('start')(type="number", name="generate_from", id="generate-from", class="dark")
        span to
        //- input(type="number", name="generate_to", id="generate-to")
        +text_input('end')(type="number", name="generate_to", id="generate-to", class="dark")
        button(type="button", id="generate-units") generate units
    
    //- Units Pane
    .pane.units#units
      +section_header('units')
      
      p.details 4500 Oakland
      
      .units-container
        .units-column.one
        .units-column.two
    
    //- Fragment Assignment Pane
    .pane#fragmentassignment
      +section_header('assign to fragment')
      div
        label leave fragment unassigned
        input(type="checkbox", name="fragment_unassigned")
      table
        tr
          th Number
          th Holder
          th Block Count
          th House Count
          th (btn)
        tr
          td 1
          td Todd Roberson
          td 13
          td 153
          td
        tr
          input(type="radio", value="", name="fragment_assignment")
    button(type="submit", name="submit") create territory
